<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vlc_video_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/vlc_video_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/vlc_video_status_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:text="播放失败"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/vlc_close_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="26dp"
        android:background="@drawable/video_switch_selector" />

    <include
        android:id="@+id/vlc_console"
        layout="@layout/vlc_video_console_include" />
</RelativeLayout>